<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

<%- unless @local_repo.empty? -%>
  <localRepository><%= @local_repo %></localRepository>

<%- end -%>

<% unless @repositories.empty? -%>
    <repositories>
<% @repositories.each do |repository| -%>
      <repository>
        <id><%= repository['id'] %></id>
        <name><%= repository['name'] %></name>
        <%- if(repository['layout'].nil?) -%>
        <layout>default</layout>
        <%- else -%>
        <layout><%= repository['layout'] %></layout>
        <%- end -%>
        <url><%= repository['url'] %></url>
        <%- unless repository['snapshots'].nil? or repository['snapshots'].empty? -%>
        <snapshots>
          <%- repository['snapshots'].sort.each { |key,value| -%>
          <%=  "<#{key}>#{value}</#{key}>" %>
          <%- } -%>
        </snapshots>                    
        <%- end -%>
        <%- unless repository['releases'].nil? or repository['releases'].empty? -%>
        <releases>
          <%- repository['releases'].sort.each { |key,value| -%>
          <%=  "<#{key}>#{value}</#{key}>" %>
          <%- } -%>
        </releases>
        <%- end -%>
      </repository>
<% end -%>

    </repositories>

<%- end -%>
<% unless @mirrors.empty? -%>
  <mirrors>
<% @mirrors.each do |mirror| -%>
    <mirror>
      <id><%= mirror['id'] %></id>
      <url><%= mirror['url'] %></url>
      <mirrorOf><%= mirror['mirrorof'] %></mirrorOf>
    </mirror>
<% end -%>
  </mirrors>

<% end -%>
<% unless @servers.empty? -%>
  <servers>
<% @servers.each do |server| -%>
    <server>
      <id><%= server['id'] %></id>
      <username><%= server['username'] %></username>
      <password><%= server['password'] %></password>
    </server>
<% end -%>
  </servers>

<% end -%>
<% unless @proxies.empty? -%>
  <proxies>
<% @proxies.each do |proxy| -%>
    <proxy>
<% if(proxy['active'].nil?) -%>
      <active>true</active>
<% else -%>
      <active><%= proxy['active'] %></active>
<% end -%>
<% if(proxy['protocol'].nil?) -%>
      <protocol>http</protocol>
<% else -%>
      <protocol><%= proxy['protocol'] %></protocol>
<% end -%>
      <host><%= proxy['host'] %></host>
<% unless(proxy['port'].nil?) -%>
      <port><%= proxy['port'] %></port>
<% end -%>
<% unless(proxy['username'].nil?) -%>
      <username><%= proxy['username'] %></username>
<% end -%>
<% unless(proxy['password'].nil?) -%>
      <password><%= proxy['password'] %></password>
<% end -%>
<% unless(proxy['nonProxyHosts'].nil?) -%>
      <nonProxyHosts><%= proxy['nonProxyHosts'] %></nonProxyHosts>
<% end -%>
    </proxy>
<% end -%>
  </proxies>

<% end -%>
<% unless @default_repo_config.empty? and @properties.empty? -%>
  <profiles>
    <%- unless @default_repo_config.empty? -%>
    <profile>
      <id>default-repo</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>central</id>
          <url><%= @default_repo_config['url'] %></url>
          <%- unless @default_repo_config['snapshots'].nil? or @default_repo_config['snapshots'].empty? -%>
          <snapshots>
            <%- @default_repo_config['snapshots'].sort.each { |key,value| -%>
            <%=  "<#{key}>#{value}</#{key}>" %>
            <%- } -%>
          </snapshots>
          <%- end -%>
          <%- unless @default_repo_config['releases'].nil? or @default_repo_config['releases'].empty? -%>
          <releases>
            <%- @default_repo_config['releases'].sort.each { |key,value| -%>
            <%=  "<#{key}>#{value}</#{key}>" %>
            <%- } -%>
          </releases>
          <%- end -%>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url><%= @default_repo_config['url'] %></url>
          <%- unless @default_repo_config['snapshots'].nil? or @default_repo_config['snapshots'].empty? -%>
          <snapshots>
            <%- @default_repo_config['snapshots'].sort.each { |key,value| -%>
            <%=  "<#{key}>#{value}</#{key}>" %>
            <%- } -%>
          </snapshots>
          <%- end -%>
          <%- unless @default_repo_config['releases'].nil? or @default_repo_config['releases'].empty? -%>
          <releases>
            <%- @default_repo_config['releases'].sort.each { |key,value| -%>
            <%=  "<#{key}>#{value}</#{key}>" %>
            <%- } -%>
          </releases>
          <%- end -%>
        </pluginRepository>
      </pluginRepositories>
    </profile>
    <%- end -%>
    <%- unless @properties.empty? -%>
    <profile>
      <id>properties</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <%- @properties.sort.each { |key, value| -%>
        <%=  "<#{key}>#{value}</#{key}>" %>
        <%- } -%>
      </properties>
    </profile>
    <%- end -%>
  </profiles>

<% end -%>
</settings>
